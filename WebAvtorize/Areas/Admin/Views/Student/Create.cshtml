@using WebAvtorize.Areas.Admin.Models.ModelDTO
@model StudentDTO



<form asp-action="Create"  method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                 <label>Имя:</label>
                <input asp-for="FirstName" type="text" class="form-control " placeholder="Введите имя" tabindex="1">
            </div>
            <div class="form-group">
                <label>Фамилия:</label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Введите фамилию" tabindex="2">
            </div>
             <div class="form-group">
                <label>Возрасть:</label>
                <input asp-for="Age" type="number" class="form-control" placeholder="Введите возрасть" tabindex="2">
            </div>
             <div class="form-group">
                <label>Дата рождения:</label>
                <input asp-for="Birthday" type="text" class="form-control" placeholder="Введите дата рождения" tabindex="2">
            </div>          
            

             <div class="form-group">
                <label>Названия курса</label>
                <select class="form-control" asp-for="CourseId">
                @foreach (var item in ViewBag.Courses )
                {
                    <option value="@item.Id">

                        @item.Name
                    </option>
                }

                </select>
                <span asp-validation-for="CourseId"></span>
            </div>
            
           
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Добавить</button>
                    <a asp-action="Index" asp-controller="Student" class="btn btn-secondary">Оменить</a>
                </center>
            </div>
        </div>
    </div>
</form>
